<div style="width: 100%;margin-left: auto;margin-right: auto;height:20px;">
    <div class="line_head" style="width:100%;margin: 30px 0px 0px 0px;"></div>
</div>
<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">後台系統</h5>
        </div>
        <div class="modal-body">
            <div class="container">
                <form id="LoginData" asp-controller="Home" asp-action="Login">
                    @Html.AntiForgeryToken()
                    <div class="input-group form-group">
                        <input type="text" class="form-control" name="Account" id="Account" placeholder="帳號" value="@TempData["Account"]" required autofocus>
                    </div>
                    <div class="input-group form-group">
                        <input type="password" class="form-control" name="Pwd" id="Pwd" placeholder="密碼" value="@TempData["Pwd"]" required>
                    </div>
                    <small id="ErrorCode" class="text-danger">@TempData["LoginMeg"]</small>
                    <div class="modal-footer d-flex">
                        <button type="submit" class="btn btn-lg btn-primary mt-1">登入</button>
                    </div>
                </form>
            </div> <!-- /container -->
        </div>
    </div>
</div>
